<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/imgFoodAppLogo"
        android:layout_width="240dp"
        android:layout_height="403dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="164dp"
        android:contentDescription="@string/foodapp_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foodapp_logo" />

    <TextView
        android:id="@+id/txtFoodAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="11dp"
        android:contentDescription="@string/foodapp_name"
        android:text="@string/foodapp_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintBottom_toTopOf="@+id/imgFoodAppLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/foodapp_name" />
</androidx.constraintlayout.widget.ConstraintLayout>